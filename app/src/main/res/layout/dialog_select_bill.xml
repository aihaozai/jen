<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="#eee"
        >

        <TextView
            android:id="@+id/bill_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:text="取消"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/bill_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:text="确定"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.example.haozai.jen.wheel.WheelView
            android:id="@+id/wvbill"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            app:itemVisibleNum="5"
            app:textColorOuter="@android:color/darker_gray"
            app:textSizeOuter="14.0dip"
            app:textColorCenter="@android:color/holo_blue_dark"
            app:textSizeCenter="22.0dip"
            app:lineColor="@android:color/holo_blue_dark"
            app:isLoop="true"
            app:lineSpaceingDimens="10.0dip" />

    </LinearLayout>
</LinearLayout>