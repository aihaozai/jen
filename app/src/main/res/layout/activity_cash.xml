<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.haozai.jen.ManageForMe.Cash">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="@drawable/shape_gradient"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_gradient"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/cash_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@mipmap/safety_whiteback" />

        <TextView
            android:id="@+id/about_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:gravity="center_vertical|start"
            android:text="余额"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/shape_gradient">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:text="账户余额(元)"
            android:textColor="@color/bg_l" />

        <TextView
            android:id="@+id/cashview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:text="0.00"
            android:textColor="@android:color/white"
            android:textColorLink="@android:color/white"
            android:textSize="70sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chrage"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/cash_v"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="5dp"
            app:srcCompat="@mipmap/recharge" />

        <TextView
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="充值" />

        <ImageView
            android:id="@+id/chrage_go"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@mipmap/downgo" />

    </LinearLayout>

    <View
        android:id="@+id/view13"
        style="@style/bg_line"
        android:layout_width="wrap_content"
        android:layout_height="1dp" />

    <LinearLayout
        android:id="@+id/showchrage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="63dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                app:srcCompat="@mipmap/jine" />

            <EditText
                android:id="@+id/jine"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/input_all"
                android:digits="@string/alphabet_and_number"
                android:hint="请输入金额"
                android:inputType="number"
                android:maxLength="5"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_cash"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bt_save"
            android:elevation="0dp"
            android:text="确定"
            android:textColor="@color/end_or2"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>
